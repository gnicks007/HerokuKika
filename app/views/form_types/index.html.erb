<h1>Created Forms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @form_types.each do |form_type| %>
      <tr>
        <td><%= form_type.name %></td>
        <td><%= form_type.author %></td>
        <td><%= link_to 'View', form_type %></td>
        <td><%= link_to 'Edit', edit_form_type_path(form_type) %></td>
        <td><%= link_to 'Delete', form_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

